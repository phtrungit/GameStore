<div class="content-wrapper">
<div class="row">
    <script>
        function imgPrev() {
            var url = $("#product_image").val();
            $("#img_pre").attr({'src':url});
        }
    </script>

	<div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Edit product</h4>
                  {{#product}}
                  <script>
                  $(document).ready(function(){
                        $("#{{this.category}}").attr({'selected':''});
                  });
                  </script>
                  <form class="forms-sample" method="post" action="/admin/product/edit{{this.url}}" />
                  <div class="form-group">
                      <img src="{{this.imagePath}}" id="img_pre" class="icon-choose-image" width="256" height="128" />
                  </div>

                    <div class="form-group">
                        
                      <label for="exampleInputName1">Name</label>
                      <input type="text" class="form-control" id="exampleInputName1" name="product_title" value="{{this.title}}" placeholder="ex:OutLast" />
                    </div>
                      <div class="form-group">
                          <label for="exampleInputCity1">Image path</label>
                          <input type="text" class="form-control" id="product_image" onfocusout="imgPrev()" name="product_image" placeholder="ex:steam.com/image.png" value="{{this.imagePath}}" />
                      </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Category</label>
                      <select class="form-control" name="product_category">
                      	<option  id="Action" value="Action">Action</option>
                      	<option  id="Adventure" value="Adventure">Adventure</option>
                      	<option  id="Indie" value="Indie">Indie</option>
                      	<option id="RPG" value="RPG">RPG</option>
                      	<option id="Racing" value="Racing">Racing</option>
                      	<option id="Sports" value="Sports">Sports</option>
                      	<option id="Simulation" value="Simulation">Simulation</option>
                      </select>
                    </div>
                    <div class="form-group">
                    
                      <label for="exampleInputCity1">Price</label>
                      <input type="text" class="form-control" id="exampleInputCity1" name="product_price" placeholder="ex:100,0000" value="{{this.price}}" />
                    </div>
                    <div class="form-group">
                      <label for="exampleInputCity1">Amount</label>
                      <input type="text" class="form-control" id="exampleInputCity1" name="product_amount" placeholder="ex:100" value="{{this.amount}}"/>
                    </div>
                      <div class="form-group">
                          <label for="exampleInputCity1">Publisher</label>
                          <input type="text" class="form-control" id="exampleInputCity1" name="product_publisher" placeholder="ex:CAPCOM,BlueHole,..." value="{{this.publisher}}" />
                      </div>
                      <div class="form-group">
                          <label for="exampleInputCity1">Release date</label>
                          <input type="text" class="form-control" id="exampleInputCity1" name="product_releaseDate" placeholder="ex:21/01/2018" value="{{this.releaseDate}}" />
                      </div>
                    <div class="form-group">
                      <label for="exampleTextarea1">Description</label>
                      <textarea class="form-control" id="exampleTextarea1" name="product_descr" rows="2" value="" >{{this.description}}</textarea>
                    </div>
                    {{/product}}
                    <div class="form-group row">
                          <label class="col-sm-3 col-form-label">Membership</label>
                          <div class="col-sm-4">
                            <div class="form-radio">
                              <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="product_status" id="available" value="available" {{available_flag}} />
                                Available
                              </label>
                            </div>
                          </div>
                          <div class="col-sm-5">
                            <div class="form-radio">
                              <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="product_status" id="Unavailble" value="unavailable" {{unavailable_flag}} />
                                Unavailable
                              </label>
                            </div>
                          </div>
                        </div>
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <button type="submit" class="btn btn-success mr-2">Save</button>
                    <button id="cancle" href="#" class="btn btn-light">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
</div>
</div>
