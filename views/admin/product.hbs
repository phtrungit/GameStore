<div class="content-wrapper">
          <div class="card">
            <div class="card-body">
            	<div>
              	<a href="/admin/product/add" class="btn btn-outline-primary float-right">
              		<i class="fas fa-plus-circle"></i>
              		New product
              	</a>
              </div>
              <h4 class="card-title">Product table</h4>
              
               
              <div class="row">
                <div class="col-12">
                  <div class="table-responsive">
                    <table id="order-listing" class="table">
                      <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Publisher</th>
                            <th>Release date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>

                        </tr>
                      </thead>
                      <tbody>
                      	{{# each product_list}}
                      	
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.price_string}}</td>
                            <td>{{this.category}}</td>
                            <td>{{this.publisher}}</td>
                            <td>{{this.releaseDate}}</td>
                            <td>{{this.amount}}</td>
                            <td>
                              <label class="badge badge-info">{{this.status}}</label>
                            </td>
                            <td>
                              <a href="/admin/product/edit{{this.url}}" class="btn btn-outline-primary">Edit</a>
                              <a href="/admin/product/delete{{this.url}}" class="btn btn-outline-primary">Delete</a>
                            </td>
                          
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>