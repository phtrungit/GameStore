<div class="content-wrapper">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Danh s√°ch user</h4>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="order-listing" class="table">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Active</th>
                                <th>Actions</th>

                            </tr>
                            </thead>
                            <tbody>
                            {{# each users_list}}

                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.username}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>{{this.mail}}</td>

                                    <td>
                                        <label class="badge badge-info">{{this.isActivated}}</label>
                                    </td>

                                    <td>
                                        <a href="/admin/user/edit/{{this._id}}" class="btn btn-outline-primary">Edit</a>

                                    </td>

                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>