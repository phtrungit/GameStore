<div id="container">
    <div class="container">
        <div class="row">
            <aside id="column-left" class="col-sm-3 hidden-xs"></aside>
            <div class="input-form">
                <form method="POST" action="/recover">
                    <div class="row">
                        <div class="col-sm-12"><span class="form-title">Quên mật khẩu</span></div>
                        <div class="error">
                            {{#if error}}
                                <p>{{error}}!</p>
                            {{/if}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 input-field">
                            <div class="input-text">Tài khoản</div>
                            <input type="text" class="input-box" name="username">
                        </div>
                    </div>
                    <div class="row">
                        <button type="submit" class="btn-submit">Xác nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>