<div id="container">
    <div class="container">
        <div class="row">
            <aside id="column-left" class="col-sm-3 hidden-xs"></aside>
            <div class="input-form">
                <form method="POST" action="/user/change_password">
                    <div class="row">
                        {{# if hasErrors}}
                        <div class="alert alert-danger" role="alert">
                            Mật khẩu cũ không chính xác!
                        </div>
                        {{/if}}
                        {{# if success}}
                            <div class="alert alert-danger" role="alert">
                                Thay đổi mật khẩu thành công!
                            </div>
                        {{/if}}
                        <div class="col-sm-12"><span class="form-title">Thay đổi mật khẩu</span></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 input-field">
                            <div class="input-text">Mật khẩu cũ</div>
                            <input type="password" class="input-box" name="old_pass">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 input-field">
                            <div class="input-text">Mật khẩu mới</div>
                            <input type="password" class="input-box" name="new_pass">
                        </div>
                    </div>
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <div class="row">
                        <button type="submit" class="btn-submit">Xác nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>