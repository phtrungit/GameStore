<div id="container">
    <div class="container">
        <div class="row">
            <aside id="column-left" class="col-sm-3 hidden-xs"></aside>
            <div class="input-form">
                <form method="POST">
                    <div class="row">
                        <div class="col-sm-12"><span>Đăng nhập</span></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 input-field">
                            <div class="input-text">Tên đăng nhập</div>
                            <input type="text" class="input-box">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 input-field">
                            <div class="input-text">Mật khẩu</div>
                            <input type="password" class="input-box">
                        </div>
                    </div>
                    <input type="submit" class="btn-submit" value="Đăng nhập">
                </form>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('.input-box').focus(function(){
		$(this).closest('.input-field').addClass('focus');
	});
	
	$('.input-box').blur(function(){
		if ($(this).val() === ''){
			$(this).closest('.input-field').removeClass('focus');
		}
	});
</script>